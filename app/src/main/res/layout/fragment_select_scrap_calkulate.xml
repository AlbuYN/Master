<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".view.fragments.SelectScrapCalculateFragment">

    <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                android:background="@drawable/primary_gradient_color"
        />

    </android.support.design.widget.AppBarLayout>


        <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="?android:actionBarSize"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_gravity="center_horizontal"
                >

            <android.support.v7.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    app:cardElevation="6dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                <TextView
                        android:id="@+id/tvTotal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextAppearance.AppCompat.Title"
                        android:padding="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="center"
                        tools:text="1223"/>
            </android.support.v7.widget.CardView>

            <!-- TODO: Update blank fragment layout -->

            <TextView
                    android:id="@+id/tv1"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/element_frame"
                    android:padding="24dp"
                    android:text="1"
                    android:textSize="24sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardView"
                />


            <TextView
                    android:id="@+id/tv3"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/element_frame"
                    android:padding="24dp"
                    android:text="3"
                    android:textSize="24sp"
                    app:layout_constraintStart_toEndOf="@+id/tv2"
                    app:layout_constraintTop_toTopOf="@+id/tv2" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp" android:layout_marginRight="16dp"/>

            <TextView
                    android:id="@+id/tv2"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/element_frame"
                    android:padding="24dp"
                    android:text="2"
                    android:textSize="24sp"
                    app:layout_constraintStart_toEndOf="@+id/tv1"
                    app:layout_constraintTop_toTopOf="@+id/tv1"/>

            <TextView
                    android:id="@+id/tv6"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/element_frame"
                    android:padding="24dp"
                    android:text="6"
                    android:textSize="24sp"
                    app:layout_constraintStart_toEndOf="@+id/tv5"
                    app:layout_constraintTop_toBottomOf="@+id/tv3"/>

            <TextView
                    android:id="@+id/tv5"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/element_frame"
                    android:padding="24dp"
                    android:text="5"
                    android:textSize="24sp"
                    app:layout_constraintStart_toEndOf="@+id/tv4"
                    app:layout_constraintTop_toBottomOf="@+id/tv2"/>

            <TextView
                    android:id="@+id/tv4"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/element_frame"
                    android:padding="24dp"
                    android:text="4"
                    android:textSize="24sp"
                    app:layout_constraintStart_toStartOf="@+id/tv1"
                    app:layout_constraintTop_toBottomOf="@+id/tv1"/>

            <TextView
                    android:id="@+id/tv0"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/element_frame"
                    android:padding="24dp"
                    android:text="0"
                    android:textSize="24sp"
                    app:layout_constraintStart_toEndOf="@+id/imgBtnRefresh"
                    app:layout_constraintTop_toBottomOf="@+id/tv9"/>

            <TextView
                    android:id="@+id/tv7"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/element_frame"
                    android:padding="24dp"
                    android:text="7"
                    android:textSize="24sp"
                    app:layout_constraintStart_toStartOf="@+id/tv4"
                    app:layout_constraintTop_toBottomOf="@+id/tv4"/>

            <TextView
                    android:id="@+id/tv9"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/element_frame"
                    android:padding="24dp"
                    android:text="9"
                    android:textSize="24sp"
                    app:layout_constraintStart_toEndOf="@+id/tv8"
                    app:layout_constraintTop_toBottomOf="@+id/tv6"/>

            <TextView
                    android:id="@+id/tv8"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/element_frame"
                    android:padding="24dp"
                    android:text="8"
                    android:textSize="24sp"
                    app:layout_constraintStart_toEndOf="@+id/tv7"
                    app:layout_constraintTop_toBottomOf="@+id/tv5"/>

            <ImageButton
                    android:id="@+id/imgBtnRefresh"
                    android:layout_width="140dp"
                    android:layout_height="79dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/element_frame"
                    android:padding="24dp"
                    android:src="@drawable/ic_action_update"
                    app:layout_constraintStart_toStartOf="@+id/tv7"
                    app:layout_constraintTop_toBottomOf="@+id/tv7"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>

        </android.support.constraint.ConstraintLayout>


        <android.support.design.widget.FloatingActionButton
                android:id="@+id/fabOk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:src="@drawable/baseline_done_white_24"
                android:layout_margin="16dp" />
        <android.support.design.widget.FloatingActionButton
                android:id="@+id/fabCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|bottom"
                android:src="@drawable/ic_action_back"
                android:layout_margin="16dp" />

    </android.support.design.widget.CoordinatorLayout>
</layout>